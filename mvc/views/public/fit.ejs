<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Receitas Fit</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    <header class="header-color-1"> <img src="/images/logo.png" alt="Logo do Meu Site" class="logo"> </header>
    <header class="header-color-2"></header>
    <header class="header-color-3"> 
        <button class="header-button"><a href="/receita/lista">Todas</a></button>
        <button class="header-button"><a href="/receita/vo">Receitas de vรณ</a></button>
        <button class="header-button"><a href="/receita/fit">Receitas fit</a></button>
        <button class="header-button"><a href="/receita/larica">Receitas da larica</a></button>
        
        <% if (req.session && req.session.email) { %>
            <button class="header-button"><a href="/destroi">Sair</a></button>
        <% } else { %>
            <button class="header-button"><a href="/pagina/login">Login</a></button>
        <% } %>
    </header>    
    <p></p>
    <% for(let receita of receitas){ %>
    <div class="recipe-container">
        <div class="recipe-box">
            <h3><%= receita.nome %></h3>
            <img src="../images/upload/<%= receita.imagem %>" alt="Foto da Receita" class="recipe-image">
            <div class="recipe-info">
                <h4>Ingredientes:</h4>
                <p><%= receita.ingredientes %></p>
                <h4>Modo de preparo:</h4>
                <p><%= receita.modo_preparo %></p>
            </div>
        </div>
    </div>
    <% } %>
    <a href="/pagina/cadastro"><button class="add-button">+</button></a>
    <script>
        console.log(req.session + 'oi');
    </script>
</body>
</html>
